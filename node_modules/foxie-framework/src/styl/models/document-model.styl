//html helpers
*,
*:before,
*:after
	box-sizing:inherit;

//Theme

if theme == "light"
	base-oposite = invert(#dfe2e2)
	muted-text-color = #2e2e2e
else if theme == "dark"
	base-color = invert(base-color)
	base-oposite = #dfe2e2
	muted-text-color = #e2e2e2

//Accent bar

//warn(accent-bar)

body
	width:100%;
	color:auto;
	if accent-bar == "true"
		border-top:.3rem solid primary-color;
		padding-top:1.7rem;

		@media tablet
			padding-top:0em;

	background-color base-color