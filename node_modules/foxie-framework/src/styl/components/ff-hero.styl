hero(image = null, image-size = null, image-pos = null, text-color = #000)
	background-position:center;
	background-color:hero-color;
	background-repeat:no-repeat;
	min-height:50rem;
	color:auto;
	display:table;
	width:100%;

	if hero-url
		background-image:url(hero-url);
	else
		background-image:url(image);

	if hero-tint-blend
		blend(hero-tint-blend)

	if hero-tint
		box-shadow(inset 0px 0px 0px 9999em transparentify(hero-tint, hero-tint-alpha))

	if accent-bar == "true"
		margin-top: -1.7rem;
		padding-top:1.7rem;

	{container-default}
		padding-left:gutter;
		padding-right:gutter;
		text-align:center;
		display:table-row;

		h1,
		h2,
		h3
			font-weight:100;

		{btn-default}
			btn(ghost)