notification-stack()
	position:fixed;
	top:1.2rem;
	right:1rem;
	margin:0;
	padding:0;
	width:30rem;

	@media mobile--tablet
		width:100%;
		max-width:40rem;
		right:0;
		top:0;
		padding:1rem;
		{notify}
			p
				display:none;

		//show notification one at a time
		{notify-item} ~ {notify-item}
			display:none;

	{notify-item}
		margin-bottom:1.2rem;
		display:block;
		min-height:3rem;
		border-radius:curves;
		box-shadow(m2);
		padding:(gutter / 3);
		list-style:none;
		position:relative;
		background-color:#fff;
		if theme == dark
			color:#000;

		h6
			margin-top:0;
			margin-bottom:0;

		p
			margin-top:.8rem;
			margin-bottom:0;
			width: 22rem;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			font-size:1.2rem;
			//2 liner
			display: -webkit-box;
			-webkit-line-clamp: 2;
			-webkit-box-orient: vertical;
			white-space: initial;

		&:after
			btn()
			content:"x";
			position:absolute;
			top:0;
			right:0;
			min-width:initial;
			min-height:initial;
			background:none;
			border:0;
			box-shadow:none;

		&:before
			content:"";
			display:block;
			width:5rem;
			height:5rem;
			border-radius:curves;
			float:left;
			margin-right:(gutter / 2);
			font-size:2rem;
			text-align:center;
			line-height:2.4;

	{notify-warning}
		&:before
			background-color:deep-orange-200;
			icon('\e0d8')
			color:deep-orange-500;
			border:1px solid (@color);

	{notify-info}
		&:before
			background-color:blue-100;
			icon('\e07c')
			color:blue-500;
			border:1px solid (@color);

	{notify-success}
		&:before
			background-color:green-100;
			icon('\e033')
			color:green-500;
			border:1px solid (@color);

	{notify-attention}
		&:before
			background-color:amber-100;
			icon('\e069')
			color:amber-500;
			border:1px solid (@color);