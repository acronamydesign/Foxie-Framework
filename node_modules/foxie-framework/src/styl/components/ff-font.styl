common()
	font-size:16px;
	line-height:1.5;
	vertical-align: baseline;

body
	if web-font
		font-family:web-font;

//pre, code, tt

//h1, h2, h3, h4, h5, h6, b, strong

h1, h2, h3, h4, h5, h6
	line-height:.8;
	& small
		if theme == "light"
			color:darken(base-color, 60%);
		else if theme == "dark"
			color:lighten(base-color, 60%)

h1
	small
		font-size:2.5rem;
h2
	small
		font-size:2rem;
h3
	small
		font-size:1.8rem;
h4
	small
		font-size:1.6rem;
h5
	small
		font-size:1.4rem;
h6
	small
		font-size:1.4rem;

h1
	font-size:50px;
h2
	font-size:40px;
h3
	font-size:32px;
h4
	font-size:22px;
h5
	font-size:18px;
h6
	font-size:14px;

p,
a,
blockquote
	common()

a
	if links-inherits-color and theme == "light"
		color:darken(primary-color, 15%);
		border-bottom: .08em solid darken(base-color, 10%);
	else if links-inerits-color and theme == "dark"
		color:lighten(primary-color, 15%);
		border-bottom: .08em solid ligten(base-color, 10%);
	else
		color:#41b7d8;
	text-decoration:none;
	padding-bottom: .08em;

//em, i, dfn

blockquote
	@media mobile--tablet
		margin:2rem 0 2rem 0;
	padding:0 2rem;
	font-style:italic;
	font-size:2rem;
	if blockquotes-inherits-color
		border-left:.3rem primary-color solid;
	else if !blockquotes-inherits-color and theme == "light"
		border-left:.3rem darken(base-color, 20%) solid;
	else if !blockquotes-inherits-color and theme == "dark"
		border-left:.3rem darken(base-color, 75%) solid;

