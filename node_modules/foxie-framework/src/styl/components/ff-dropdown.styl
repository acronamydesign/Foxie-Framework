{dropmenu-active}
	background:darken(primary-color,8%);
	color:auto;

dropdown(align-mod)
	[data-glyph]
		font-size:.8rem;
		vertical-align:middle;
		margin-left:.5rem;
	{list-default}
		z-index:1;
		overflow:hidden;
		display:none;
		position:absolute;
		min-width:18rem;
		box-shadow:m2;
		border:0;
		border-radius:.2rem;
		if theme == "light"
			background:lighten(base-color, 90%);
		else if theme == "dark"
			background:lighten(base-color, 20%);

		if align-mod == left
			left:0;
		if align-mod == right
			right:0;

		li
			display:block;
			width:100%;
			text-align:left;
			font-size:1.5rem;

			if theme == "light"
				color:#333;

				&:hover
					background:base-color;
					color:#000;

			else if theme == "dark"
				color:#f5f5f5;

				&:hover
					background:lighten(base-color, 10%);
					color:#fff;

			if dropdowns-inherits-color == true
				color:#333;

				&:hover
					background:darken(primary-color,10%);
					color:#fff;

			&:hover
				cursor:pointer;