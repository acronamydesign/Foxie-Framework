navHeight = 4.6rem;

navbar(size, controls = none)
	min-height:navHeight;
	margin-bottom:2rem;
	font-size:1em;
	box-shadow(m1);
	if navbar-inherits-color == true
		background-color:primary-color;
		color:darken(primary-color,50%);
	else if navbar-inherits-color == false and theme == light
		background-color:lighten(base-color, 50%);
	else if navbar-inherits-color == false and theme == dark
		background-color:lighten(base-color, 10%);

	if size == full
		& > div
			container()
			padding-left:gutter;
			padding-right:gutter;

	if size == compact
		@media desktop
			width:100%;
			max-width:unit(container-width, correct); //true width
			margin-left:auto;
			margin-right:auto;
			margin-top:0;

		@media mobile--tablet
			width:100%;
			max-width:unit(small-container-width,correct);
			margin-left:auto;
			margin-right:auto;
			margin-top:0;

		padding-left:gutter;
		padding-right:gutter;
		if navbar-inherits-curves == true
			border-radius:curves;
		else
			border-radius:.4rem;

		@media tablet
			border-radius:0;

	//inner wrapper used for variant

	div,
	nav
		clearfix();

	nav
		float:controls;

	//headings

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin:0;
		font-size:2.5rem;
		font-weight:500;
		display:inline-block;
		color:inherit;
		margin-right:gutter;
		float:left;

	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		a
			font-size:1em;

{navbar-all}
	display:table;
	&>div
		display:table-cell;
		vertical-align:middle;
	a
		text-decoration:none;
		border:0;
		color:inherit;

	nav
		display:table;
	//lists

	ul
		margin:0;
		padding-left:0;
		vertical-align: middle;

	ul > li
		list-style:none;
		position:relative;
		display:table-cell;

	ul > li > a
		line-height:2.9;
		padding:0 1rem;
		vertical-align:middle;
		margin-left:1rem;
		padding:1rem;
		if navbar-inherits-curves
			border-radius:curves;

	ul > li.active//active color
		if primary-color
			background:darken(primary-color,8%);
			color:#fff;

	ul > li:first-child > a
		margin-left:0;

	ul > li:last-child > a
		margin-right:0;

//dynamic
	{inputs-search}
		display:inline-block;
		margin-bottom:0;
		{btn-invisible}
			margin-left:gutter;
			padding:1rem;
			border-radius:9999em;
			transition:background .3s;
			&:active
				background:darken(primary-color, 8%);