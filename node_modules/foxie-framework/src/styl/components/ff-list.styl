list-group(selection = null, devide = null)
	panel()
	padding-left:0;
	&>li
		list-style:none;
		font-size:1.8rem;
		padding:1rem gutter;

		if device == hairline
			border-top:1px solid darken(base-color,10%);
			&:last-child
				border-bottom:1px solid darken(base-color,10%);
		//selection color is based on theme

		if selection == selectable and theme == "light"
			&:hover
				background-color:darken(base-color, 30%);
				color:#fff;

		if selection == selectable and theme == "dark"
			&:hover
				background-color:lighten(base-color, 30%);
				color:#000;
		//selection color is primary
		if selection == selectable and list-inherits-color
			&:hover
				background-color:primary-color;
				color:#fff;
	&>li:first-child
		border-top-left-radius:inherit;
		border-top-right-radius:inherit;
	&>li:last-child
		border-bottom-left-radius:inherit;
		border-bottom-right-radius:inherit;