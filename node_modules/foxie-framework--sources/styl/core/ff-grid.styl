set_pad = unit(gutter, correct);

col-pad(pad = set_pad)
	padding-left pad
	padding-right pad

	@media tablet
		padding-left pad - 50%
		padding-right pad - 50%

col-fix(pad = set_pad)
	padding-left pad
	padding-right pad
	margin-left (-(pad));

col(val, col = oneCol)
		float:left;
		pos-rel()
		col-pad()
		if val == 1
			width col
		else if val == 2
			width col * 2
		else if val == 3
			width col * 3
		else if val == 4
			width col * 4
		else if val == 5
			width col * 5
		else if val == 6
			width col * 6
		else if val == 7
			width col * 7
		else if val == 8
			width col * 8
		else if val == 9
			width col * 9
		else if val == 10
			width col * 10
		else if val == 11
			width col * 11
		else if val == 12
			width col * 12

		@media mobile--tablet
			if val == 1 or val == 2 or val == 3 or val == 4 or val == 5 or val == 6 or val == 7 or val == 8 or val == 9 or val == 10 or val == 11 or val == 12
				width:100%;
				clear:both;

	col-offset(val, align, col = 8.333333333333333%)
		if val == 1 and align == "left"
			margin-left col
		else if val == 2 and align == "left"
			margin-left col * 2
		else if val == 3 and align == "left"
			margin-left col * 3
		else if val == 4 and align == "left"
			margin-left col * 4
		else if val == 5 and align == "left"
			margin-left col * 5
		else if val == 6 and align == "left"
			margin-left col * 6
		else if val == 7 and align == "left"
			margin-left col * 7
		else if val == 8 and align == "left"
			margin-left col * 8
		else if val == 9 and align == "left"
			margin-left col * 9
		else if val == 10 and align == "left"
			margin-left col * 10
		else if val == 11 and align == "left"
			margin-left col * 11
		else if val == 12 and align == "left"
			margin-left col * 12
		else if val == 1 and align == "right"
			margin-right col
			right:0;
			left:initial;
		else if val == 2 and align == "right"
			margin-right col * 2
			right:0;
			left:initial;
		else if val == 3 and align == "right"
			margin-right col * 3
			right:0;
			left:initial;
		else if val == 4 and align == "right"
			margin-right col * 4
			right:0;
			left:initial;
		else if val == 5 and align == "right"
			margin-right col * 5
			right:0;
			left:initial;
		else if val == 6 and align == "right"
			margin-right col * 6
			right:0;
			left:initial;
		else if val == 7 and align == "right"
			margin-right col * 7
			right:0;
			left:initial;
		else if val == 8 and align == "right"
			margin-right col * 8
			right:0;
			left:initial;
		else if val == 9 and align == "right"
			margin-right col * 9
			right:0;
			left:initial;
		else if val == 10 and align == "right"
			margin-right col * 10
			right:0;
			left:initial;
		else if val == 11 and align == "right"
			margin-right col * 11
			right:0;
			left:initial;
		else if val == 12 and align == "right"
			margin-right col * 12
			right:0;
			left:initial;

container()
	clearfix()
	if arguments == fluid
		width:100%;
		max-width:100%;
	else
		@media desktop
			width:100%;
			max-width:unit(container-width,correct); //true width
			margin-left:auto;
			margin-right:auto;
			margin-bottom:0;
			margin-top:0;
		@media mobile--tablet
			width:100%;
			max-width:unit(small-container-width,correct);
			margin-left:auto;
			margin-right:auto;
			margin-bottom:0;
			margin-top:0;