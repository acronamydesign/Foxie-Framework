logo(modifier = false)
	display: inline-table;
	width: auto;
	vertical-align: middle;
	h1,
	h2,
	h3,
	h4,
	h5,
	img
		display: table-cell;
		vertical-align: middle;
		min-height: inherit;
		float: none;
	if modifier == inversion
		filter:unquote("invert(100%)");
	else if modifier == light
		filter:unquote("grayscale(1.0) brightness(9999%)");
	else if modifier == dark
		filter:unquote("grayscale(1.0) brightness(-9999%)");