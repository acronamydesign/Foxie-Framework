text-lumin = #363636;

btn(size-mod = default, style-mod = default)
	font-size:1.4rem;
	min-height:3.2rem;
	font-weight:bold;
	border:0;
	outline:0;
	border-radius:.4rem;
	cursor:pointer;
	padding:0 .98em;
	vertical-align: middle;
	line-height:1rem;
	min-width:10rem;

	if buttons-inherits-color == true
		input-states()

	if size-mod == default
		padding:.8rem;
		if theme == light
			background-color:lighten(base-color, 20%);
			color:darken(base-color,80%);
			background-linear-gradient(top, #FFFFFF, 0%, base-color, 100%)
			border:solid 1px darken(base-color, 21%);
			box-shadow(inset 0px 1px 0px 0px rgba(255,255,255,0.95));
			text-shadow: 0px -1px 0px rgba(255, 255, 255, 0.5);
			&:active
				background-color:lighten(base-color, 40%);

		else if theme == dark
			background-color:lighten(base-color, 20%);
			background-linear-gradient(top, base-color, 0%, #000, 100%)
			color:lighten(base-color,80%);
			border:solid 1px darken(base-color, 21%);
			box-shadow(inset 0px 1px 0px 0px rgba(255,255,255,0.20));
			text-shadow: 0px -1px 0px rgba(0, 0, 0, 0.5);
			&:active
				background-color:lighten(base-color, 18%);

	if style-mod == ghost
		&
			font-size:2rem;
			background:none;
			box-shadow:none;
			text-shadow:none;
			padding:2rem 4rem;
			line-height:1rem;
			min-height:initial;
			border:solid .2rem;
			color:inherit;
			&:focus,
			&:active
				background:initial;

	if style-mod == invisible
		&
			background:initial;
			border:0;
			box-shadow:initial;
			text-shadow:initial;
			min-height:initial;
			padding:initial;
			min-width:initial;
			color:inherit;

	//@media mobile

	//@media tablet

btn-group()
	clearfix()
	display:inline-block;
	&>*
		float:left;
		border-radius:0;
	&>*:first-child
		border-radius:4px 0 0 4px;
		border-right-width:0px;

	&>*:last-child
		border-radius:0 4px 4px 0;
		border-left-width:0px;